@page
@model SmartMatchLogger.Pages.Matches.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Add New Match</h1>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">Please correct the errors in the form before saving.</div>
        }
        <div asp-validation-summary="All" class="text-danger"></div>

    <hr />
    <div class="row">
    <div class="col-md-12">
    <form method="post">
    <div class="row">
        <!-- LEFT COLUMN -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Match.Opponent" class="control-label"></label>
                <input asp-for="Match.Opponent" class="form-control" list="opponentList" />
                <datalist id="opponentList">
                    @{
                        var opponentNames = ViewData["OpponentNames"] as List<string>;
                        if (opponentNames != null && opponentNames.Any())
                        {
                            foreach (var name in opponentNames)
                            {
                                <option value="@name" />
                            }
                        }
                    }
                </datalist>
                <span asp-validation-for="Match.Opponent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Match.Surface" class="control-label"></label>
                <select asp-for="Match.Surface" class="form-control">
                    <option value="HardCourt">Hard Court</option>
                    <option value="Clay">Clay</option>
                    <option value="Grass">Grass</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Match.PlayStyle" class="control-label"></label>
                <select asp-for="Match.PlayStyle" class="form-control">
                    <option value="OffensiveBaseliner">Offensive Baseliner</option>
                    <option value="CounterPuncher">Counter Puncher</option>
                    <option value="ServeAndVolleyer">Serve and Volleyer</option>
                    <option value="AllCourt">All Court</option>
                </select>
            </div>

            <div class="form-group">
                    <label asp-for="Match.Location" class="control-label"></label>
                    <input asp-for="Match.Location" class="form-control" />
                    <span asp-validation-for="Match.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <label asp-for="Match.Score" class="control-label"></label>
                    <input asp-for="Match.Score" class="form-control" />
                    <span asp-validation-for="Match.Score" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Match.Date" class="control-label"></label>
                <input asp-for="Match.Date" class="form-control" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Match.Winner" /> @Html.DisplayNameFor(model => model.Match.Winner)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Match.MatchNotes" class="control-label"></label>
                <textarea asp-for="Match.MatchNotes" class="form-control" rows="4"></textarea>
            </div>
        </div>

        <!-- RIGHT COLUMN -->
        <div class="col-md-5">
            <h5>Ratings</h5>

            <div class="form-group">
                <label asp-for="Match.ServeRating">Serve</label>
                <input asp-for="Match.ServeRating" type="range" min="1" max="10" class="form-range" />
            </div>

            <div class="form-group">
                <label asp-for="Match.ForehandRating">Forehand</label>
                <input asp-for="Match.ForehandRating" type="range" min="1" max="10" class="form-range" />
            </div>

            <div class="form-group">
                <label asp-for="Match.BackhandRating">Backhand</label>
                <input asp-for="Match.BackhandRating" type="range" min="1" max="10" class="form-range" />
            </div>

            <div class="form-group">
                <label asp-for="Match.VolleyRating">Volley</label>
                <input asp-for="Match.VolleyRating" type="range" min="1" max="10" class="form-range" />
            </div>

            <div class="form-group">
                <label asp-for="Match.FatigueLevel">Fatigue Level</label>
                <input asp-for="Match.FatigueLevel" type="range" min="1" max="10" class="form-range" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    </form>

    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function toggleDatalist() {
            const input = document.getElementById("opponentInput");

            if (input.value.length >= 2) {
                input.setAttribute("list", "opponentList");
            } else {
                input.removeAttribute("list");
            }
        }
    </script>
}
