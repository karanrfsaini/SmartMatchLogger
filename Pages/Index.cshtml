@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to SmartMatchLogger";
}

<style>
    body {
        background-color: #121212;
        color: #E0E0E0;
        font-family: 'Segoe UI', sans-serif;
    }

    .hero {
        padding: 6rem 2rem;
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero h1 {
        font-size: 4rem;
        color: #00ff88;
        margin-bottom: 1rem;
    }

    .tagline {
        font-size: 1.75rem;
        color: #cccccc;
        margin-bottom: 2rem;
    }

    .actions a {
        margin: 0.75rem;
        padding: 1.25rem 2.5rem;
        font-weight: bold;
        font-size: 1.1rem;
        border: 2px solid #00ff88;
        color: #00ff88;
        background-color: transparent;
        text-decoration: none;
        border-radius: 12px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .actions a:hover {
        background-color: #00ff88;
        color: #121212;
        transform: scale(1.05);
    }

    .highlight-card {
        background-color: #1e1e1e;
        border-radius: 16px;
        padding: 2rem;
        margin-top: 3rem;
        max-width: 750px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.1);
    }

    .highlight-card h4 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .highlight-card p {
        margin: 0.25rem 0;
        font-size: 1.1rem;
    }
</style>

<div class="hero">
    <h1>SmartMatchLogger 🎾</h1>
    <p class="tagline">Log smarter. Analyze better. Play your best tennis.</p>

    <div class="actions">
        <a asp-page="/Matches/Create">Log a Match</a>
        <a asp-page="/Matches/Index">View Match Log</a>
    </div>

    <div class="highlight-card">
        <h4>📊 Last Match Summary</h4>
        <p>Opponent: Alex</p>
        <p>Result: Win</p>
        <p>Surface: Hard Court</p>
        <p>Forehand: 4/5 | Backhand: 3/5 | Serve: 5/5 | Volley: 2/5</p>
    </div>
</div>
