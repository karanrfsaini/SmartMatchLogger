<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartMatchLogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartMatchLogger.styles.css" asp-append-version="true" />
    
    @* (This style here is for the navbar at the top of the screen) *@
    
    <style>
        .custom-navbar {
            background-color: #1e1e1e;
            padding-top: 1.25rem;
            padding-bottom: 1.25rem;
            min-height: 80px;
        }

        .custom-brand {
            font-size: 1.75rem;
            font-weight: bold;
            color: #00ff88 !important;
        }

        .custom-link {
            color: #e0e0e0 !important;
            font-size: 1.1rem;
            margin-left: 1rem;
            transition: color 0.3s ease;
        }

        .custom-link:hover {
            color: #00ff88 !important;
        }

        .navbar-toggler {
            border-color: #00ff88;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark custom-navbar border-bottom shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand custom-brand" asp-area="" asp-page="/Index">SmartMatchLogger</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-page="/Matches/Index">Match Log</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-page="/Matches/Create">Log Match</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-page="/Matches/Upload">Upload</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-page="/Matches/Stats">Stats</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SmartMatchLogger - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</html>